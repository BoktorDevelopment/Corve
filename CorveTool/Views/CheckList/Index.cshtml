@model List<CheckListViewModel>
@{
    ViewData["Title"] = "Index";


   
}
<div class="container">
    <h2>Index</h2>
    
    @ViewData["test"]

    @using (Html.BeginForm("Index", "CheckList", FormMethod.Post))
    {
        <div style="width: 200px">
            <input class="form-control save-button float-right" type="submit" name="save" value="Save" />
        </div>
        <a href="Checklist/add" class="add-icon"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
        <table class="table table-hover">
            <tr>
                <th>This Week Tasks</th>
                <th>Check</th>
            </tr>
            @foreach (var item in Model)
            {
                if (ViewData["weeknumber"].ToString() == item.WeekNumber.ToString() && item.Checked == false)
                {
                    <tr>
                        <td>@item.Task.Task</td>
                        <td><input type="checkbox" name="Checked" value="@item.Id" /></td>
                    </tr>
                }
            }
        </table>
    }
</div>